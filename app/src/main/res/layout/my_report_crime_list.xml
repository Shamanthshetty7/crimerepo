<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="17dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1B7B7"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/report_image_imageview"
            android:layout_width="73dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:scaleType="centerCrop"
            app:strokeWidth="5dp" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/report_image_imageview"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/report_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report Title"
                android:textColor="#130303"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date and time"
                android:textColor="#302A2A"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginStart="0dp">

            <ImageButton
                android:id="@+id/delete_report_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@android:color/holo_red_dark"
                android:contentDescription="Delete Report"
                android:src="@android:drawable/ic_menu_delete"

                />

            <ImageButton
                android:id="@+id/edit_report_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/holo_blue_light"
                android:contentDescription="Edit Report"
                android:src="@android:drawable/ic_menu_edit" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
